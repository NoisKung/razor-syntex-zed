@{
    ViewData["Title"] = "Home Page";
    var message = "Hello from Razor!";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <style>
        body { font-family: Arial, sans-serif; }
        .highlight { color: #007acc; }
    </style>
</head>
<body>
    <h1>@ViewData["Title"]</h1>
    <p>@message</p>
    
    @if (DateTime.Now.Hour < 12)
    {
        <p class="highlight">Good morning!</p>
    }
    else
    {
        <p class="highlight">Good afternoon!</p>
    }
    
    <script>
        console.log('@message');
        var data = @Html.Raw(Json.Serialize(new { name = "Razor", version = "6.0" }));
    </script>
</body>
</html>