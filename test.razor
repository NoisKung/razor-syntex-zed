@page "/example"
@model ExampleModel

<div class="container">
    <h2>@Model.Title</h2>
    
    @foreach (var item in Model.Items)
    {
        <div class="card">
            <h3>@item.Name</h3>
            <p>@item.Description</p>
            @if (item.IsActive)
            {
                <span class="badge active">Active</span>
            }
        </div>
    }
    
    @{
        var counter = 0;
        var cssClass = "even";
    }
    
    <ul>
    @for (int i = 0; i < Model.Items.Count; i++)
    {
        counter++;
        cssClass = counter % 2 == 0 ? "even" : "odd";
        <li class="@cssClass">Item @(i + 1): @Model.Items[i].Name</li>
    }
    </ul>
</div>